<% include ../partials/header %>
	
	<script>
		$(document).ready(function(){
			$("#account").click(function(){
				$("table:first").replaceWith("<table><tr><td>This page is currently under progress <br> Try again later or Contact Us</td></tr></table>");
				$(".active").removeClass("active");
				$("#account").parent().addClass("active");
			});
			$("#profile").click(function(){
				$("table:first").replaceWith("<table><tr><td>Name</td><td>Email</td><td>Phone No</td></tr><tr><td><%= p['firstname'] %> <%= p['lastname'] %></td><td><%= p['email'] %></td><td><%= p['phoneno'] %></td></tr></table>");
				$(".active").removeClass("active");
				$("#profile").parent().addClass("active");
			});
			$("#history").click(function(){
				// $("table:first").replaceWith("<table><% b.forEach(function(p){ %><tr><td>Airways</td><td>Source</td><td>Destination</td></tr><tr><td><%= p['name'] %></td><td><%= p['source'] %></td><td><%= p['destination'] %></td></tr><tr><td>Departure Date<td><td><%= p['Dep_dateTime'] %></td></tr><tr><td>Arrival Date<td><td><%= p['arrival_dateTime'] %></td></tr> <% }); %> </table>");
