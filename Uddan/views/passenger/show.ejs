				$("table:first").replaceWith("<table><tr><td colspan=2>For Help Contact Us on</td></tr><tr><td>Email Id</td><td>Name</td></tr><tr><td>Shivam Sansare</td><td>shivam.sansare@somaiya.edu</td></tr><tr><td>Dhruvil Shah</td><td>dhruvil.s@somaiya.edu</td></tr></table>");
				$(".active").removeClass("active");
				$("#help").parent().addClass("active");
			});
		});
	</script>
	
	
